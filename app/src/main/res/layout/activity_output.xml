<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_top"
    tools:context="com.example.mike.piglatin.OutputActivity"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:textSize="@dimen/abc_text_size_large_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pl_outcome"  />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/abc_text_size_large_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pl_first"  />

                <TextView
                    android:textSize="@dimen/abc_text_size_large_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pl_last"  />

            </LinearLayout>


        <ImageView
            android:src="@drawable/pig"
            android:id="@+id/display_image"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/activity_vertical_margin_top"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</LinearLayout>
